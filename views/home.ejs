<%- include('partials/header') -%>
<h1>Home</h1>
<p><%= homeContent %></p>

<!-- Writing the new posts that the user entered in compose. -->

<!-- for-each loop -->
<%newContent.forEach(function(element){%>
    <h1><%= element.title %></h1>
    
    <p>
        <%= element.content.substring(0,100)+" ..."%> 
        <a href="/posts/<%= element._id %>">read more</a>
        <!-- to include the posts.hello we have hello in the element.title and we simply use the scriplet tag to 
        enter it into the href-->
    </p>
    <!-- the substring method is to limit the length of the post to 100 characters only. -->
<%})%>


